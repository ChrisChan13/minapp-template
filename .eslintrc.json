{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "globals": {
    "wx": true,
    "App": true,
    "Page": true,
    "getApp": true,
    "worker": true,
    "arguments": true,
    "Component": true,
    "getCurrentPages": true,
    "cancelAnimationFrame": true,
    "requestAnimationFrame": true
  },
  "rules": {
    "linebreak-style": "off",
    "no-unused-vars": [
      "error",
      {
        "args": "none"
      }
    ],
    "max-len": [
      "error",
      {
        "code": 110,
        "ignoreComments": true
      }
    ],
    "no-console": "off",
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "no-fallthrough": "off"
  }
}
