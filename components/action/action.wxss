.action {
  transform: translateY(1300px);
}

.title {
  font-size: 34rpx;
  color: #888888;
  line-height: 44rpx;
  padding: 15rpx;
  white-space: normal;
  word-break: break-all;
}

.content {
  font-size: 28rpx;
  color: #B2B2B2;
  line-height: 38rpx;
  padding: 0 15rpx 15rpx;
  white-space: normal;
  word-break: break-all;
}

.list,
.cancel_wrap {
  width: 720rpx;
  background: #FFFFFF;
  font-size: 36rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 15rpx;
  margin: 15rpx 0;
  overflow: hidden;
}

.item,
.cancel_wrap {
  height: 80rpx;
}

view.item {
  border-top: 1px solid #F5F5F5;
}

.line_through {
  width: 100%;
  height: 1px;
  background: #F5F5F5;
}

.item,
.cancel {
  text-align: center;
  line-height: 80rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  box-sizing: border-box;
  padding: 0 15rpx;
}

.item_hover,
view.item:active,
view.cancel:active {
  background: rgba(0, 0, 0, .05);
}
