.modal {
  width: 100vw;
  height: 100vh;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
}

.modal_bg {
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, .4);
  width: 100%;
  height: 100%;
}

.modal_main {
  position: absolute;
}
