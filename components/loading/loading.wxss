.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.loading_img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  font-size: 0;
  line-height: 0;
  margin-right: 12rpx;
  animation: loading 1.3s linear infinite;
}

.loading_label {
  font-size: 24rpx;
  color: #CCCCCC;
  line-height: 34rpx;
}

@keyframes loading {
  from { transform: rotate(0deg); }
  from { transform: rotate(-360deg); }
}
